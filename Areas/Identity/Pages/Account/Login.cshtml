@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row d-flex justify-content-center">

        <div class="col-md-8">
            <h1>@ViewData["Title"]</h1>
            <section>
                <form id="account" class="row row-cols-1 gy-2" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-0"></div>
                    <div class="form-group col">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group col">
                        <button type="submit" class="btn btn-primary rounded-0 text-capitalize">log in</button>
                    </div>
                    <div class="d-flex flex-column mt-3 col">

                        <a class="btn btn-link btn-outline-light border-0 mt-1" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>

                        <a class="btn btn-link btn-outline-light border-0 mt-1" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>

                        <a class="btn btn-link btn-outline-light border-0 mt-1" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>

                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
