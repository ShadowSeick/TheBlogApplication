@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="row">
        <div class="col-md-6">
            <h4>@ViewData["Title"]</h4>
            <form id="profile-form" class="row row-cols-1 gy-2" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Input.Image"></label>
                    <input type="file" asp-for="Input.Image" class="form-control" accept=".jpg,.png,.jpeg,.gif" />
                    <span asp-validation-for="Input.Image" class="text-danger"></span>
                </div>

                <div>
                    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>

        </div>

        <div class="col-md-6">
            <img src="@Model.CurrentImage" class="img-fluid rounded-circle" width="90%;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}