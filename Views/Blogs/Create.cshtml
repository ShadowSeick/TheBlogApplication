@model TheBlogApplication.Models.Blog

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    
    <div class="row justify-content-center">

        <div class="col col-md-10">
            <h1>Create</h1>

            <h4>Blog</h4>
            <hr />
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Desciption" class="control-label"></label>
                    <textarea asp-for="Desciption" class="form-control"></textarea>
                    <span asp-validation-for="Desciption" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" asp-for="Image" class="form-control" accept=".jpg,.png,.jpeg,.gif" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            </form>
            <div>
                <a asp-action="Index" asp-controller="Home">Back to List</a>
            </div>
        </div>
    </div>

    
</div>

