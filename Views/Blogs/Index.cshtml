@using TheBlogApplication.Services
@inject IImageService imageService
@model IEnumerable<TheBlogApplication.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Index</h1>

    @if (User.IsInRole("Administrator"))
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Desciption)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageData)
                </th>
                @if (User.IsInRole("Administrator"))
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => blog.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => blog.Desciption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => blog.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => blog.Updated)
                </td>
                <td>
                    <img class="img-fluid" width="200" src="@imageService.DecodeImage(blog.ImageData, blog.ContentType)" />
                </td>
                @if (User.IsInRole("Administrator"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@blog.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@blog.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@blog.Id">Delete</a>
                    </td>
                }
                else
                {
            <td>
                <a asp-action="Details" asp-route-id="@blog.Id">Details</a>
            </td>
                }

            </tr>
            }
        </tbody>
    </table>
</div>
