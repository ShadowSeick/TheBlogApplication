

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Technology blog, programming and ideas" />
    <meta name="author" content="Adrián Muñoz González" />

    <title>Ask Better Questions</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>

    <!-- Google fonts-->
    <link href="//fonts.googleapis.com/css?family=Roboto:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />

    <!-- JQuery reference-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!--Reference Summernote-->
    <link href="~/css/summernote-lite.min.css" rel="stylesheet" />

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/Custom.css" rel="stylesheet" />
</head>
<body class="min-vh-100 d-flex flex-column">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand fs-3" asp-controller="Home" asp-action="Index">AB:Q</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="Contact">Contact</a></li>

                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Blogs" asp-action="Create">Create Blog</a></li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Posts" asp-action="Create">Create Post</a></li>
                    }


                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

        <header class="masthead pb-5" style="padding-top:10rem;">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col">
                        <div class="site-heading d-flex flex-column">
                            <h1 class=" text-capitalize">ask better questions</h1>
                            <span class="subheading text-capitalize ">get better answers. A blog for improving</span>
                            <form asp-action="SearchIndex" asp-controller="Posts">
                                <div class="input-group mt-5">
                                    <input type="text" name="SearchTerm" class="form-control" placeholder="Search Term" />
                                    <div class="input-group-append">
                                        <button class="btn btn-warning btn-sm" type="submit">Search</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </header>
    <!-- Page Header-->
    <!-- Main Content-->
    @RenderBody()


    <!-- Footer-->
    <div class="mt-auto pt-2"></div>
    <footer class="border-top mt-auto py-3">
        <div class="container">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="https://www.linkedin.com/in/adri%C3%A1n-mu%C3%B1oz-gonz%C3%A1lez-b98669136/" target="_blank">
                                <span class="fa-stack fa-lg" >
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://github.com/ShadowSeick" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <div class="small text-center text-muted fst-italic">Copyright &copy;Ask Better Questions 2021</div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sweet Alert 2 Plugin -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Summernote-->
    <script src="~/js/summernote-lite.min.js"></script>

    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>




